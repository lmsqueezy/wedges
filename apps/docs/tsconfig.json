{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "contentlayer/generated": ["../.contentlayer/generated"],
    },
    "plugins": [
      {
        "name": "next",
      },
    ],
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "allowJs": true,
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".contentlayer/generated",
    ".next/types/**/*.ts",
  ],
  "exclude": ["node_modules"],
}
