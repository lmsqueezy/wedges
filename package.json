{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo clean && rm -rf node_modules && rm ./pnpm-lock.yaml",
    "dev": "turbo run dev",
    "format": "prettier --check ./packages/**/src ./apps/** --cache",
    "format:fix": "prettier --write ./packages/**/src --cache",
    "lint": "eslint -c .eslintrc \"packages/**/**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix -c .eslintrc \"packages/**/**/*.{ts,tsx}\"",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@types/node": "^20.8.4",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.1",
    "turbo": "^1.10.15",
    "tailwindcss": "3.3.3",
    "typescript": "^5.2.2",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.5",
    "react": "^18.2.0",
    "react-dom": "18.2.0"
  },
  "packageManager": "pnpm@8.6.12"
}
